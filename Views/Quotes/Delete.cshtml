@model QuotesWebApp.Models.Quotes

@{
    ViewData["Title"] = "Delete Quote";
}

<div class="container mt-5">
    <div class="page-header fade-in">
        <h1 class="page-title text-danger">
            <i class="fas fa-exclamation-triangle"></i>
            Delete Quote
        </h1>
        <p class="page-subtitle">Are you sure you want to permanently remove this quote?</p>
    </div>

    <div class="row">
        <div class="col-lg-8" style="margin: 0 auto;">
            <div class="alert alert-danger fade-in">
                <h5 style="margin-bottom: 0.5rem;">
                    <i class="fas fa-warning"></i>
                    Warning: Permanent Deletion
                </h5>
                <p style="margin: 0;">This action cannot be undone. The quote will be permanently removed from your collection.</p>
            </div>

            <div class="quote-card fade-in" style="margin-bottom: 2rem;">
                <div class="quote-text">
                    @Html.DisplayFor(model => model.Quote)
                </div>
                <div class="quote-author">
                    — @Html.DisplayFor(model => model.Auther)
                </div>
                @if (!string.IsNullOrEmpty(Model.description))
                {
                    <div class="quote-description">
                        <strong>About this quote:</strong><br>
                        @Html.DisplayFor(model => model.description)
                    </div>
                }
            </div>

            <div class="card fade-in">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 style="margin-bottom: 0.5rem;">
                                <i class="fas fa-question-circle text-warning"></i>
                                Are you absolutely sure?
                            </h5>
                            <p class="text-muted" style="margin: 0;">This quote will be permanently deleted and cannot be recovered.</p>
                        </div>
                        <div class="action-buttons">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i>
                                Cancel
                            </a>
                            <form asp-action="Delete" class="d-inline">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger"
                                        onclick="return confirm('Are you absolutely sure you want to delete this quote? This action cannot be undone.')">
                                    <i class="fas fa-trash"></i>
                                    Yes, Delete Quote
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
