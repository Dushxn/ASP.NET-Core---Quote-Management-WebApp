@model IEnumerable<QuotesWebApp.Models.Quotes>

@{
    ViewData["Title"] = "Your Quotes";
}

<div class="container mt-5">
    <div class="page-header fade-in">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title">
                    <i class="fas fa-quote-right"></i>
                    Your Quote Collection
                </h1>
                <p class="page-subtitle">Manage and explore your inspiring quotes</p>
            </div>
            <div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Add New Quote
                </a>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card fade-in">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Quote</th>
                            <th>Author</th>
                            <th>Description</th>
                            <th style="text-align: center;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="fw-medium" style="color: var(--gray-800);">
                                        "@Html.DisplayFor(modelItem => item.Quote)"
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-primary">
                                        @Html.DisplayFor(modelItem => item.Auther)
                                    </span>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @Html.DisplayFor(modelItem => item.description)
                                    </small>
                                </td>
                                <td style="text-align: center;">
                                    <div class="action-buttons">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="View">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="card text-center fade-in">
            <div class="card-body" style="padding: 4rem 2rem;">
                <div style="margin-bottom: 2rem;">
                    <i class="fas fa-quote-left" style="font-size: 4rem; color: var(--gray-300);"></i>
                </div>
                <h3 style="color: var(--gray-600); margin-bottom: 1rem;">No quotes yet</h3>
                <p style="color: var(--gray-500); margin-bottom: 2rem; max-width: 400px; margin-left: auto; margin-right: auto;">
                    Start building your collection by adding your first inspiring quote!
                </p>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus"></i>
                    Add Your First Quote
                </a>
            </div>
        </div>
    }
</div>
