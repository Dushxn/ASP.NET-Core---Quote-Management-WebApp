<div class="container mt-5">
    <div class="page-header fade-in">
        <h1 class="page-title">
            <i class="fas fa-search"></i>
            Search Quotes
        </h1>
        <p class="page-subtitle">Find inspiring quotes by keywords, authors, or themes</p>
    </div>

    <div class="row">
        <div class="col-lg-8" style="margin: 0 auto;">
            <div class="card fade-in">
                <div class="card-body">
                    <form asp-action="ShowSearchResults">
                        <div class="mb-4">
                            <label for="SearchPhrase" class="form-label">
                                <i class="fas fa-search"></i>
                                Search Terms
                            </label>
                            <input name="SearchPhrase" class="form-control"
                                   placeholder="Enter keywords, author names, or phrases..."
                                   autocomplete="off" />
                            <div class="form-text">
                                Search through quote text, authors, and descriptions
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i>
                                Back to Collection
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i>
                                Search Quotes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mt-4 fade-in">
                <div class="card-body">
                    <h5 style="margin-bottom: 1rem;">
                        <i class="fas fa-lightbulb text-warning"></i>
                        Search Tips
                    </h5>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="fas fa-check text-success"></i>
                                    Search by author name
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check text-success"></i>
                                    Look for specific words in quotes
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="fas fa-check text-success"></i>
                                    Search descriptions and context
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check text-success"></i>
                                    Use partial words for broader results
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
