@{
    ViewData["Title"] = "Home";
}

<div class="hero">
    <div class="container">
        <div class="hero-content fade-in">
            <h1>
                Collect & Share
                <br>
                <span style="background: linear-gradient(45deg, #fff, #e0e7ff); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                    Inspiring Quotes
                </span>
            </h1>
            <p>
                Build your personal collection of wisdom. Discover quotes that inspire, motivate, and transform your perspective on life.
            </p>
            <div class="d-flex gap-3 justify-content-center">
                <a asp-controller="Quotes" asp-action="Index" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-book-open"></i>
                    Explore Collection
                </a>
                <a asp-controller="Quotes" asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus"></i>
                    Add Quote
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container" style="padding: 4rem 1rem;">
    <!-- Features Section -->
    <div class="row" style="margin-bottom: 4rem;">
        <div class="col-lg-4 mb-4">
            <div class="feature-card fade-in">
                <div class="feature-icon primary">
                    <i class="fas fa-plus-circle"></i>
                </div>
                <h5 style="margin-bottom: 1rem; color: var(--gray-900);">Create & Organize</h5>
                <p style="color: var(--gray-600); margin-bottom: 1.5rem;">
                    Add your favorite quotes with authors and personal notes. Keep them organized in your personal collection.
                </p>
                <a asp-controller="Quotes" asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Start Creating
                </a>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="feature-card fade-in">
                <div class="feature-icon success">
                    <i class="fas fa-search"></i>
                </div>
                <h5 style="margin-bottom: 1rem; color: var(--gray-900);">Search & Discover</h5>
                <p style="color: var(--gray-600); margin-bottom: 1.5rem;">
                    Find quotes by keywords, authors, or themes. Discover new perspectives and timeless wisdom.
                </p>
                <a asp-controller="Quotes" asp-action="ShowSearchForm" class="btn btn-success">
                    <i class="fas fa-search"></i>
                    Search Quotes
                </a>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="feature-card fade-in">
                <div class="feature-icon warning">
                    <i class="fas fa-heart"></i>
                </div>
                <h5 style="margin-bottom: 1rem; color: var(--gray-900);">Curate & Share</h5>
                <p style="color: var(--gray-600); margin-bottom: 1.5rem;">
                    Manage your collection with ease. Edit, organize, and share your favorite inspirational quotes.
                </p>
                <a asp-controller="Quotes" asp-action="Index" class="btn btn-warning">
                    <i class="fas fa-heart"></i>
                    View Collection
                </a>
            </div>
        </div>
    </div>

    <!-- Quote Showcase -->
    <div style="text-align: center; margin-bottom: 3rem;">
        <h2 style="font-size: 2.5rem; font-weight: 700; color: var(--gray-900); margin-bottom: 1rem;">
            Featured Wisdom
        </h2>
        <p style="font-size: 1.125rem; color: var(--gray-600); max-width: 600px; margin: 0 auto 3rem;">
            Discover the power of words that have inspired generations
        </p>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="quote-card fade-in">
                <div class="quote-text">
                    The only way to do great work is to love what you do.
                </div>
                <div class="quote-author">— Steve Jobs</div>
                <div class="quote-description">
                    A reminder that passion is the foundation of excellence and fulfillment in our professional lives.
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="quote-card fade-in">
                <div class="quote-text">
                    In the middle of difficulty lies opportunity.
                </div>
                <div class="quote-author">— Albert Einstein</div>
                <div class="quote-description">
                    Finding hope and possibility even in the most challenging circumstances of life.
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div style="text-align: center; margin-top: 4rem; padding: 3rem; background: var(--gray-50); border-radius: var(--radius-xl);">
        <h3 style="font-size: 2rem; font-weight: 600; color: var(--gray-900); margin-bottom: 1rem;">
            Ready to Start Your Collection?
        </h3>
        <p style="font-size: 1.125rem; color: var(--gray-600); margin-bottom: 2rem; max-width: 500px; margin-left: auto; margin-right: auto;">
            Join thousands who have discovered the joy of collecting and sharing meaningful quotes.
        </p>
        <a asp-controller="Quotes" asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fas fa-rocket"></i>
            Create Your First Quote
        </a>
    </div>
</div>

@section Scripts {
    <script>
        // Smooth scroll animations
        document.addEventListener('DOMContentLoaded', function() {
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);

            // Animate elements on scroll
            document.querySelectorAll('.fade-in').forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(30px)';
                el.style.transition = 'all 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
                observer.observe(el);
            });

            // Add subtle parallax effect to hero
            window.addEventListener('scroll', () => {
                const scrolled = window.pageYOffset;
                const hero = document.querySelector('.hero');
                if (hero) {
                    hero.style.transform = `translateY(${scrolled * 0.5}px)`;
                }
            });
        });
    </script>
}
