@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-5">
    <div class="page-header fade-in">
        <h1 class="page-title">
            <i class="fas fa-shield-alt"></i>
            Privacy Policy
        </h1>
        <p class="page-subtitle">Your privacy and data protection are our top priorities</p>
    </div>

    <div class="row">
        <div class="col-lg-8" style="margin: 0 auto;">
            <div class="card fade-in">
                <div class="card-body">
                    <h5 style="margin-bottom: 2rem;">How We Protect Your Information</h5>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="text-center p-4 bg-light rounded">
                                <i class="fas fa-database fa-3x text-primary mb-3"></i>
                                <h6>Data Collection</h6>
                                <p class="text-muted" style="margin: 0;">We only collect the information you provide when creating and managing your quotes.</p>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="text-center p-4 bg-light rounded">
                                <i class="fas fa-user-shield fa-3x text-success mb-3"></i>
                                <h6>Data Usage</h6>
                                <p class="text-muted" style="margin: 0;">Your quotes and personal information are used solely to provide you with our service.</p>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="text-center p-4 bg-light rounded">
                                <i class="fas fa-key fa-3x text-warning mb-3"></i>
                                <h6>Data Security</h6>
                                <p class="text-muted" style="margin: 0;">We implement industry-standard security measures to protect your data.</p>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="text-center p-4 bg-light rounded">
                                <i class="fas fa-trash-alt fa-3x text-danger mb-3"></i>
                                <h6>Data Control</h6>
                                <p class="text-muted" style="margin: 0;">You have full control over your data and can edit or delete it anytime.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4 fade-in">
                <div class="card-body text-center">
                    <h5 style="margin-bottom: 1rem;">Questions About Privacy?</h5>
                    <p class="text-muted" style="margin-bottom: 2rem;">
                        If you have any questions about our privacy policy or how we handle your data,
                        please don't hesitate to contact us.
                    </p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-home"></i>
                        Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
