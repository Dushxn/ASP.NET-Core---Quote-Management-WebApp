@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container mt-5">
    <div class="page-header fade-in">
        <h1 class="page-title">
            <i class="fas fa-key"></i>
            Change Password
        </h1>
        <p class="page-subtitle">Update your account password for better security</p>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="card fade-in">
                <div class="card-body">
                    <h5 class="mb-3">
                        <i class="fas fa-cog"></i>
                        Account Settings
                    </h5>
                    <partial name="_ManageNav" />
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <partial name="_StatusMessage" for="StatusMessage" />

            <div class="card fade-in">
                <div class="card-body">
                    <form id="change-password-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.OldPassword" class="form-label">
                                <i class="fas fa-lock"></i>
                                Current Password
                            </label>
                            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password"
                                   aria-required="true" placeholder="Enter your current password" />
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.NewPassword" class="form-label">
                                <i class="fas fa-key"></i>
                                New Password
                            </label>
                            <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password"
                                   aria-required="true" placeholder="Enter your new password" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            <div class="form-text">
                                Must be at least 6 characters long
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.ConfirmPassword" class="form-label">
                                <i class="fas fa-check"></i>
                                Confirm New Password
                            </label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password"
                                   aria-required="true" placeholder="Confirm your new password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save"></i>
                            Update Password
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
